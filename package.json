{
  "name": "templet_node_typescript_mvc",
  "version": "1.0.0",
  "description": "This is a simple REST API developed using node and express with typescript",
  "scripts": {
    "start": "npm run transpile && node build/server.js",
    "dev": "concurrently \"npm:watch\" \"npm:serve\"",
    "serve": "nodemon build/server.js",
    "watch": "tsc -w",
    "transpile": "tsc",
    "seed": "npm run transpile && node build/src/db/seed.js",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": ">=8.0"
  },
  "keywords": [
    "Node",
    "Typescript",
    "mysql",
    "javascript"
  ],
  "author": "Ali Bani Jaber",
  "license": "Ali",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "4.0.0",
    "@types/joi": "^17.2.2",
    "@types/node": "^15.0.1",
    "@types/properties-reader": "^2.1.1",
    "@types/sequelize": "^4.28.9",
    "@types/winston": "^2.4.4",
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7",
    "tslint": "^6.1.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@popovmp/config-json": "^1.2.0",
    "await-semaphore": "^0.1.3",
    "cluster": "^0.7.7",
    "config": "^3.3.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "file-config-reader": "^0.1.1",
    "helmet": "^4.5.0",
    "http-status-codes": "^2.2.0",
    "husky": "^6.0.0",
    "joi": "^17.4.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "nconf": "^0.11.3",
    "os": "^0.1.2",
    "pg": "^8.6.0",
    "pm2": "^5.1.2",
    "pm2-server-monit": "^3.0.0",
    "properties-reader": "^2.2.0",
    "sequelize": "^6.6.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.3.3"
  },
  "hooks": {
    "pre-commit": "npm run lint"
  }
}

{

  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "strict": true,
    "allowJs": false,
    "outDir": "build",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["config",
              ".env",
              "src",
              "server.ts",
              "ecosystem.config.ts",
              "tsconfig.json",
              "tslint.json",
              "package-lock.json",
              "package.json",
              "*.log"],
}
